fs = require \fs

_ = require \../_
Cards = require \../../data/cards.json

module.exports = (players, cube) ->
  nPacks = players * cube.packs
  nCards = nPacks * cube.cards
  names = _.choose nCards, cube.list
  cards = for name of names
    card = Cards[name]
    card.code = Object.keys(card.urls)0
    card.url = card.urls[card.code]
    card
  packs = []

  for i from 0 til nPacks
    pack = []
    for j from 0 til cube.cards
      pack.push cards.pop!
    packs.push pack

  packs
